@model List<ConyGreen.DAO.Models.Romaneio>;
@{
    Layout = "_Layout";
    ViewData["Title"] = "Romaneio";
}
<!--begin::Toolbar-->
<div class="toolbar" id="kt_toolbar">
	<!--begin::Container-->
	<div id="kt_toolbar_container" class="container-fluid d-flex flex-stack">
		<!--begin::Page title-->
		<div data-kt-swapper="true" data-kt-swapper-mode="prepend" data-kt-swapper-parent="{default: '#kt_content_container', 'lg': '#kt_toolbar_container'}" class="page-title d-flex align-items-center flex-wrap me-3 mb-5 mb-lg-0">
			<!--begin::Title-->
			<h1 class="d-flex align-items-center text-dark fw-bolder fs-3 my-1">Controle</h1>
			<!--end::Title-->
			<!--begin::Separator-->
			<span class="h-20px border-gray-200 border-start mx-4"></span>
			<!--end::Separator-->
			<!--begin::Breadcrumb-->
			<ul class="breadcrumb breadcrumb-separatorless fw-bold fs-7 my-1">
				<!--begin::Item-->
				<li class="breadcrumb-item text-muted">
					<a href="@Url.Action("Index", "Romaneio", new { Area = "Controle" })" class="text-muted text-hover-primary">Romaneio</a>
				</li>
			</ul>
			<!--end::Breadcrumb-->
		</div>
		<!--end::Page title-->
		<!--begin::Actions-->
		<!--end::Actions-->
	</div>
	<!--end::Container-->
</div>
<!--end::Toolbar-->
<!--begin::Post-->
<div class="post d-flex flex-column-fluid" id="kt_post">
	<!--begin::Container-->
	<div id="kt_content_container" class="container-fluid">

		<div class="card card-bordered">
			<!--begin::Card header-->
			<div class="card-header align-items-center py-3 gap-2 gap-md-5">
				<!--begin::Card title-->
				<div class="card-title">
					<h3>Romaneio</h3>
				</div>
				<!--end::Card title-->
				<!--begin::Card toolbar-->
				<div class="card-toolbar flex-row-fluid justify-content-end gap-5">
					<a href="@Url.Action("GerarImpressao", "Romaneio", new { Area = "Controle" })" class="btn btn-primary">Gerar Impressão</a>
				</div>
				<!--end::Card toolbar-->
			</div>
			<!--end::Card header-->
			<!--begin::Card body-->
			<div class="card-body">

				<!--begin: Filters-->
				<div class="row mb-2">

					<div class="col-md-3 mb-2">
						<!--begin::Search-->
						<div class="d-flex align-items-center position-relative">
							<!--begin::Svg Icon | path: icons/duotune/general/gen021.svg-->
							<span class="svg-icon svg-icon-1 position-absolute ms-4">
								<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
									<rect opacity="0.5" x="17.0365" y="15.1223" width="8.15546" height="2" rx="1" transform="rotate(45 17.0365 15.1223)" fill="currentColor" />
									<path d="M11 19C6.55556 19 3 15.4444 3 11C3 6.55556 6.55556 3 11 3C15.4444 3 19 6.55556 19 11C19 15.4444 15.4444 19 11 19ZM11 5C7.53333 5 5 7.53333 5 11C5 14.4667 7.53333 17 11 17C14.4667 17 17 14.4667 17 11C17 7.53333 14.4667 5 11 5Z" fill="currentColor" />
								</svg>
							</span>
							<!--end::Svg Icon-->
							<input id="kt_datatable_search" type="text" data-kt-ecommerce-product-filter="search" class="form-control form-control-solid ps-14" placeholder="Pesquisar" />
						</div>
						<!--end::Search-->
					</div>


				</div>
				<!--end: Filters-->
				<!--begin: Datatable-->
				<div class="datatable-standard">
					<table class="table table-bordered table-checkable" id="kt_datatable">
						<thead>
							<tr>
								<th class="text-center">Corte</th>
								<th class="text-center">Modelo</th>
								<th class="text-center">Descrição</th>
								<th class="text-center">Tab1</th>
								<th class="text-center">Tab2</th>
							</tr>
						</thead>
						<tbody>
							@foreach(var romaneio in Model)
							{
								<tr>
									<td class="text-center">@romaneio.Corte</td>
									@if(romaneio.Conjunto == true)
									{
										<td class="text-center">@romaneio.Modelo P</td>
									}
									else
									{
										<td class="text-center">@romaneio.Modelo</td>
									}
									<td class="text-center">@romaneio.Descricao</td>
									<td class="text-center">@romaneio.TAB1</td>
									<td class="text-center">@romaneio.TAB2</td>
								</tr>
							}
						</tbody>
					</table>
				</div>
				<!--end: Datatable-->
			</div>
			<!--end::Card body-->
		</div>

	</div>
	<!--end::Container-->
</div>
<!--end::Post-->
<script src="~/js/Areas/Controle/Romaneio/Romaneio.js" asp-append-version="true" ></script>
<script type="text/javascript">
	$(function () {
		RomaneioAPI.initIndex();
	});
</script>